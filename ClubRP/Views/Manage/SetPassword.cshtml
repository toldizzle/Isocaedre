@model ClubRP.Models.SetPasswordViewModel

<h2>@Html.DisplayName(ClubRP.Views.Manage.ManageRessources.SetPasswordTitle)</h2>

<p class="text-info">@Html.DisplayName(ClubRP.Views.Manage.ManageRessources.LocalConnection)</p>

@using (Html.BeginForm("SetPassword", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    <h4>@Html.DisplayName(ClubRP.Views.Manage.ManageRessources.SetPasswordMessage)</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.Label(ClubRP.Views.Manage.ManageRessources.NewPassword, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.Label(ClubRP.Views.Account.AccountRessources.PasswordConfirm, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="@Html.DisplayName(ClubRP.Views.Shared.SharedRessources.BtnSave)" class="btn btn-default" />
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}