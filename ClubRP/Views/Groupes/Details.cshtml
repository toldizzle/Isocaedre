@model ClubRP.Models.Groupe

<h2>@Html.DisplayName(ClubRP.Views.Shared.SharedRessources.Detail)</h2>

<div>
    <h4>@Html.DisplayName(ClubRP.Views.Shared.SharedRessources.Groups)</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName(ClubRP.Views.Groupes.GroupeRessources.Title)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Titre)
        </dd>

        <dt>
            @Html.DisplayName(ClubRP.Views.Groupes.GroupeRessources.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            @Html.DisplayName(ClubRP.Views.Groupes.GroupeRessources.Creation)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Creation)
        </dd>

        <dt>
            @Html.DisplayName(ClubRP.Views.Groupes.GroupeRessources.Author)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Auteur)
        </dd>
        <dt>
            @Html.DisplayName(ClubRP.Views.Groupes.GroupeRessources.Player)
        </dt>

        <dd>
            @if (Model.Joueurs != null)
            {
                <table>
                    <tr>
                        <td>@ClubRP.Views.Groupes.GroupeRessources.Name</td>
                        <td>@ClubRP.Views.Groupes.GroupeRessources.Specialisation</td>
                        <td>@ClubRP.Views.Groupes.GroupeRessources.Status</td>
                    </tr>
                    @foreach (ClubRP.Models.Joueur p in Model.Joueurs)
                    {
                        <tr>
                            <td>@p.Nom</td>
                            <td>@p.Specialisation</td>
                            <td>@(p.Maitre ? "Maître" : "Joueur")</td>
                        </tr>
                    }
                </table>
            }
            
        </dd>
    </dl>
</div>
<p>
    @Html.ActionLink(ClubRP.Views.Shared.SharedRessources.Modify, "Edit", new { id = Model.ID }) |
    @Html.ActionLink(ClubRP.Views.Shared.SharedRessources.BtnBack, "Index")
</p>
