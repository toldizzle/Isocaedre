@model ClubRP.Models.Message


<h2>@Html.DisplayName(ClubRP.Views.Messages.MessageRessources.Reply)</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4></h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Texte, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Texte, 10, 120, htmlAttributes: new { style = "width: 100%; max-width: 100%;" })
                @Html.ValidationMessageFor(model => model.Texte, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value=@Html.DisplayName(ClubRP.Views.Shared.SharedRessources.SubmitBtn) class="btn btn-default" />
            </div>
        </div>
    </div>
 }

<div>
    @Html.ActionLink(ClubRP.Views.Shared.SharedRessources.BtnBack , "Index", "Posts")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}