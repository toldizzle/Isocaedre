@model ClubRP.Models.Message

<h2>@Html.DisplayName(ClubRP.Views.Shared.SharedRessources.Modify)</h2>

@*@using (Html.BeginForm("Edit","Messages",FormMethod.Post, new {original = @ViewBag.Message }))*@
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>@Html.DisplayName(ClubRP.Views.Messages.MessageRessources.Message)</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MessageID)
        @Html.HiddenFor(model => model.PostID)

        <div class="form-group">
            @Html.LabelFor(model => model.Texte, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Texte, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Texte, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value=@Html.DisplayName(ClubRP.Views.Shared.SharedRessources.BtnSave) class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink(ClubRP.Views.Shared.SharedRessources.BtnBack, "Index", "Posts")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}