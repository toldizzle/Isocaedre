@model ClubRP.Models.ApplicationUser

<h2>@Html.DisplayName(ClubRP.Views.Shared.SharedRessources.Delete)</h2>

<h3>@Html.DisplayName(ClubRP.Views.Shared.SharedRessources.DeleteMessage)</h3>
<div>
    <h4>@Html.DisplayName(ClubRP.Views.Membres.MembreRessources.User)</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.details.Role)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.details.Role)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.details.Nom)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.details.Nom)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.details.Prenom)
        </dt>

        <dt>
            @Html.DisplayName(ClubRP.Views.Membres.MembreRessources.Picture)
        </dt>
        <dd>
            @{
                string src = "";
                src = "data:" + Model.details.ImageType + ";base64," + Convert.ToBase64String(Model.details.ImageData);
                <img src="@src" height="140" width="100" alt=@Model.details.ImageNom />
            }
        </dd>
    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value=@ClubRP.Views.Shared.SharedRessources.Delete class="btn btn-default" /> |
            @Html.ActionLink(ClubRP.Views.Shared.SharedRessources.BtnBack, "Index")
        </div>
    }
</div>