@model IEnumerable<ClubRP.Models.ApplicationUser>

<h2>@Html.DisplayName(ClubRP.Views.Membres.MembreRessources.Index)</h2>

<p>
    @Html.ActionLink(ClubRP.Views.Membres.MembreRessources.AddMember, "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName(ClubRP.Views.Membres.MembreRessources.Username)

            @*@Html.ActionLink(ClubRP.Views.Membres.MembreRessources.Username, "Username")*@
        </th>
        <th>
            @Html.DisplayNameFor(model => model.details.Role)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.details.Nom)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.details.Prenom)
        </th>
        <th>
            @Html.DisplayName(ClubRP.Views.Membres.MembreRessources.Picture)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.details.Role)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.details.Nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.details.Prenom)
            </td>
            <td>
                @{
                    string src = "";
                    src = "data:" + item.details.ImageType + ";base64," + Convert.ToBase64String(item.details.ImageData);
                    <img src="@src" height="70" width="50" alt=@item.details.ImageNom />
                }
            </td>
            <td>
                @Html.ActionLink(ClubRP.Views.Shared.SharedRessources.Modify, "Edit", new { id = item.Id }) |
                @Html.ActionLink(ClubRP.Views.Shared.SharedRessources.Detail, "Details", new { id = item.Id }) |
                @Html.ActionLink(ClubRP.Views.Shared.SharedRessources.Delete, "Delete", new { id = item.Id })
            </td>
        </tr>
                    }
</table>