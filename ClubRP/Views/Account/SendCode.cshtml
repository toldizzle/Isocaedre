@model ClubRP.Models.SendCodeViewModel


<h2>@Html.DisplayName(ClubRP.Views.Account.AccountRessources.SendCodeTitle)</h2>

@using (Html.BeginForm("SendCode", "Account", new { ReturnUrl = Model.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" })) {
    @Html.AntiForgeryToken()
    @Html.Hidden("rememberMe", @Model.RememberMe)
    <h4>@Html.DisplayName(ClubRP.Views.Account.AccountRessources.SendCodeMessage)</h4>
    <hr />
    <div class="row">
        <div class="col-md-8">
            Select Two-Factor Authentication Provider:
            @Html.DropDownListFor(model => model.SelectedProvider, Model.Providers)
            <input type="submit" value=@Html.DisplayName(ClubRP.Views.Shared.SharedRessources.SubmitBtn) class="btn btn-default" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}