@using Microsoft.AspNet.Identity

@if (Request.IsAuthenticated)
{
    <table class="navbar-right">
        <tr>
            <td>
                @Html.Partial("_langPartialView")
            </td>
            <td>
                @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
                {
                    @Html.AntiForgeryToken()

                    <ul class="nav navbar-nav navbar-right">
                        <li>
                            @Html.ActionLink(ClubRP.Views.Shared.SharedRessources.Hello + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
                        </li>
                        <li><a href="javascript:document.getElementById('logoutForm').submit()"> @Html.DisplayName(ClubRP.Views.Shared.SharedRessources.LogOff)</a></li>

                    </ul>
                }
            </td>
        </tr>
    </table>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>
            @Html.Partial("_langPartialView")
        </li>
        <li>@Html.ActionLink(ClubRP.Views.Shared.SharedRessources.Register, "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink(ClubRP.Views.Shared.SharedRessources.LogIn, "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
