@model ClubRP.Models.Message

@{
    ViewBag.Title = "Create";
}

<h3>Répondre</h3>


@using (Html.BeginForm("Create", "Messages"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4></h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @*@Html.LabelFor(model => model.Texte, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <div class="col-md-12">
                @Html.TextAreaFor(model => model.Texte, 12, 120, htmlAttributes: new { style = "width: 100%; max-width: 100%;" })
                @Html.ValidationMessageFor(model => model.Texte, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-12">
                <input type="submit" value="Créer" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Retour au forum", "Index", "Posts")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}