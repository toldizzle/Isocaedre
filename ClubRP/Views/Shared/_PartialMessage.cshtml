@model ClubRP.Models.Message

<h3>@Html.DisplayName(ClubRP.Views.Messages.MessageRessources.Reply)</h3>


@using (Html.BeginForm("Create", "Messages"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-12">
                @Html.TextAreaFor(model => model.Texte, 12, 120, htmlAttributes: new { style = "width: 100%; max-width: 100%;" })
                @Html.ValidationMessageFor(model => model.Texte, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-12">
                <input type="submit" value="Créer" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink(ClubRP.Views.Shared.SharedRessources.BtnBack, "Index", "Posts")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}