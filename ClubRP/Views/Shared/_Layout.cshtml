<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Titre</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body style="background-color:#EBD699">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <img src="~/Content/Images/LogoOr.png" alt="Logo" style=" height:50px; width:50px;" />
                @Html.ActionLink("L'Icosaèdre", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Accueil", "Index", "Home")</li>
                    <li>@Html.ActionLink("A propos", "About", "Home")</li>
                    <li>@Html.ActionLink("Nous rejoindre", "Contact", "Home")</li>
                    <li>@Html.ActionLink("Matériel", "Materiel", "Home")</li>
                    <li>@Html.ActionLink("Forum", "Index", "Posts")</li>
                    @{
                        if (User.IsInRole("Administrateurs"))
                        {
                            <li>@Html.ActionLink("Membre", "Index", "Membres")</li>
                        }
                    }
                    <li>@Html.ActionLink("Groupe", "Index", "Groupes")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <img class="col-md-4" src="~/Content/Images/DndLogo.png" alt="Logo" />
            <img class="col-md-4" src="~/Content/Images/PathfinderLogo.png" alt="Logo" />
            <img class="col-md-4" src="~/Content/Images/World_of_DarknessLogo.png" alt="Logo" />
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    @RenderSection("scripts", required: false)
</body>
</html>