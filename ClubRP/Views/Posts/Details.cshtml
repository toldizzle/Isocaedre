@model ClubRP.Models.Post

@{
    ViewBag.Title = Model.Titre.ToString();
}

<h2>@ViewBag.Title</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Titre)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Titre)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Creation)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Creation)
        </dd>

        <dt>
            Nombre de réponse:
        </dt>
        <dd>
            @(Model.Messages.Count)
        </dd>
        
        <dt>
            @Html.DisplayNameFor(model => model.Messages)
        </dt>
        <dd>
            @foreach (ClubRP.Models.Message p in Model.Messages)
            {
                @(p.Texte)
            }
        </dd>
    </dl>
</div>
<p>
    @Html.ActionLink("Modifier", "Edit", new { id = Model.ID }) |
    @Html.ActionLink("Retour au forum", "Index")
</p>
